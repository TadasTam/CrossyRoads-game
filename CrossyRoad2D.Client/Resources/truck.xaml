<Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Width="400" Height="200" x:Name="viewbox">
    <Grid x:Name="grid" Width="400" Height="200" Opacity="1.0">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="1" 
                                ScaleY="1" 
                                CenterX="100" 
                                CenterY="100"
                                x:Name="scaleTransform"/>

                <RotateTransform Angle="0" 
                                 CenterX="100" CenterY="100"
                                 x:Name="rotateTransform"/>
            </TransformGroup>
        </Grid.RenderTransform>

        <!-- Tires -->
        <Rectangle x:Name="tire1" Width="40" Height="15" Fill="#000000" Margin="300,162,60,23"/>
        <Rectangle x:Name="tire2" Width="40" Height="15" Fill="#000000" Margin="70,175,290,10"/>
        <Rectangle x:Name="tire3" Width="40" Height="15" Fill="#000000" Margin="300,23,60,162"/>
        <Rectangle x:Name="tire4" Width="40" Height="15" Fill="#000000" Margin="70,10,290,175"/>

        <!-- Big Package -->
        <Rectangle Fill="#aaaaaa" Margin="20,20,115,20"/>
        <Rectangle Fill="#888888" Margin="20,30,115,155"/>
        <Rectangle Fill="#888888" Margin="20,60,115,124"/>
        <Rectangle Fill="#888888" Margin="20,92,115,92"/>
        <Rectangle Fill="#888888" Margin="20,124,115,60"/>
        <Rectangle Fill="#888888" Margin="20,154,115,30"/>

        <!-- front -->
        <Rectangle x:Name="front1" Fill="#ff0000" Margin="290,38,32,38"/>
        <Rectangle x:Name="front2" Fill="#ff0000" Margin="368,57,15,57"/>
        <Rectangle Fill="#000000" Margin="273,145,110,44"/>
        <Rectangle Fill="#000000" Margin="273,44,110,145"/>
        <Rectangle Fill="#000000" Margin="325,61,62,128"/>
        <Rectangle Fill="#000000" Margin="338,61,49,61"/>
        <Rectangle Fill="#000000" Margin="325,128,62,61"/>
        
        <Rectangle x:Name="collision" Fill="#00000000" Margin="20,30,15,30"/>
        
    </Grid>
</Viewbox>