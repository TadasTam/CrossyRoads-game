<Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Width="200" Height="200" x:Name="viewbox">
    <Grid Width="200" Height="200">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="1" 
                                ScaleY="1" 
                                CenterX="100" 
                                CenterY="100"
                                x:Name="scaleTransform"/>

                <RotateTransform Angle="0" 
                                 CenterX="100" CenterY="100"
                                 x:Name="rotateTransform"/>
            </TransformGroup>
        </Grid.RenderTransform>

        <Ellipse x:Name="body" Width="140" Height="140" Fill="#FFFF00" Margin="30,30,30,30" Stroke="Black" StrokeThickness="5"/>
        <TextBlock FontSize="100" Margin="0,25,0,0" TextAlignment="Center" Foreground="#FFA500">$</TextBlock>
    </Grid>
</Viewbox>